<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context="org.d3if2101.canteen.ui.penjual.homeadminproduk.HomeProduk">

    <LinearLayout
        android:id="@+id/id_Nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--Top Nav-->
        <LinearLayout
            android:id="@+id/main_activity_top_header_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E6F8F8F8"
            android:clipToPadding="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/top_wish_name_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/merriweather"
                android:text="@string/kantin_1"
                android:textColor="#1C213F"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/main_activity_search_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_search" />

            <ImageView
                android:id="@+id/nav_drawer_opener_iv"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginEnd="20dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/menu_icon"
                android:src="@drawable/ic_bar"
                app:tint="@color/text_dark_color" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="32dp"
        android:gravity="top"
        android:text="@string/produk"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_Nav" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_dashboard">

        <ImageView
            android:id="@+id/ivProdukMakanan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="8dp"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_ProdukMakanan"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Makanan" />

        <ImageView
            android:id="@+id/ivTitikProdukMakanan"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="8dp"
            android:src="@drawable/elipsis" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout">

        <ImageView
            android:id="@+id/ivProdukMinuman"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="8dp"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_ProdukMinuman"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Minuman" />

        <ImageView
            android:id="@+id/ivTitikProdukMinuman"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="8dp"
            android:src="@drawable/elipsis" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout2">

        <ImageView
            android:id="@+id/ivProdukCamilan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="8dp"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_ProdukCamilan"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Camilan" />

        <ImageView
            android:id="@+id/ivTitikProdukCamilan"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="8dp"
            android:src="@drawable/elipsis" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>