<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/status_pesanan"
    android:padding="16dp">

    <TextView
        android:id="@+id/txt_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Rating:"/>

    <LinearLayout
        android:id="@+id/stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@+id/txt_rating"
        app:layout_constraintStart_toEndOf="@id/txt_rating"
        android:layout_marginStart="8dp">

        <ImageView
            android:id="@+id/star1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_star"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_star"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_star"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/star4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_star"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/star5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_star"
            android:contentDescription="TODO" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_ulasan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/txt_rating"
        app:layout_constraintTop_toBottomOf="@id/txt_rating"
        android:text="Ulasan:"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/txt_ulasannya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/stars"
        app:layout_constraintTop_toTopOf="@id/txt_ulasan"
        android:text="Pisang gorengnya kurang crispy."/>

</androidx.constraintlayout.widget.ConstraintLayout>